@model RentACar.Models.Rental

@{
    ViewData["Title"] = "Rent Car";
}

<div class="container">
    <h2 class="mb-4">Rent Car</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="RentCar" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CarId" />
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Car Name</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" value="@ViewBag.CarName" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Car Brand</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" value="@ViewBag.CarBrandName" disabled />
                        <input type="hidden" name="sdate" value="@ViewBag.StartDate" />
                        <input type="hidden" name="edate" value="@ViewBag.EndDate" />
                        <input type="hidden" name="sayi" value=1 />
                    </div>
                </div>
               
                <div class="form-group row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary mr-2">Rent</button>
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
