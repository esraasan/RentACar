@model Rental

@{
    ViewData["Title"] = "Delete Rent";
}

<div class="container mt-5">
    <h2 class="mb-4">Delete </h2>
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="text-danger">Are you sure you want to delete this rental?</p>
                <dl class="row">
                    <dt class="col-sm-3">Car Name:</dt>
                    <dd class="col-sm-9">@Model.CarName</dd>

                    <dt class="col-sm-3">Car Brand:</dt>
                    <dd class="col-sm-9">@Model.CarBrandName</dd>

                    <dt class="col-sm-3">Start Date:</dt>
                    <dd class="col-sm-9">@Model.StartDate</dd>

                    <dt class="col-sm-3">End Date:</dt>
                    <dd class="col-sm-9">@Model.EndDate</dd>
                </dl>

                <div class="form-group row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="RentList" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
