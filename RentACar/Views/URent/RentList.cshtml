@model IEnumerable<RentACar.Models.Rental>

@{
    ViewData["Title"] = "My Rentals";
}


@if (!Model.Any())
{
    <p>You have not rented any cars yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Car Name</th>
                    <th>Car Brand</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Rental Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rental in Model)
                {
                    <tr>
                        <td>@rental.CarName</td>
                        <td>@rental.CarBrandName</td>
                        <td>@rental.StartDate.ToShortDateString()</td>
                        <td>@rental.EndDate.ToShortDateString()</td>
                        <td>@rental.CarPrice</td>
                        <td>
                            <a asp-controller="URent" asp-action="Update" asp-route-id="@rental.Id" type="button" class="btn btn-success" style="width:100px;">Update</a>
                        </td>
                        <td>
                            <a asp-controller="URent" asp-action="Delete" asp-route-id="@rental.Id" type="button" class="btn btn-danger" style="width:100px;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
