@model Cars
@{
    ViewData["Title"] = "Delete Car";
}


<form method="post">
    <input asp-for="Id" hidden /> <!--Önemlii id yazıp yazmamak bize kalmış.Komplike yapılarda gereklidir-->
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">@ViewData["Title"]</h2>
            <hr/>
        </div>
   
        <div class="mb-3">
            <label asp-for="CarName" class="form-label">Car Name</label>
            <input asp-for="CarName" disabled class="form-control" />
            <span asp-validation-for="CarName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <button type="submit" class="btn btn-lg btn-primary" style="width:100%">Delete</button>
            </div>
            <div class="col-md-6 mb-3">
                <a asp-controller="Cars" asp-action="Index" class="btn btn-lg btn-primary" style="width:100%">
                    Back
                </a>
            </div>
        </div>
    </div>
</form>

