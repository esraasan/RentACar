@model Cars


<form method="post" enctype="multipart/form-data">
	<input asp-for="ImgUrl" hidden />
	<div class="row">
		<div class="col-10">

			<div class="border p-3 mt-5">
				<div class="row pb-3">
					<h2 class="text-primary">@(Model == null ? "Add " : "Update")</h2>
					<hr/>
				</div>

				<div class="mb-3">
					<label asp-for="CarBrandName" class="form-label">Brand</label>
					<input asp-for="CarBrandName" type="text"  class="form-control"/>
					<span asp-validation-for="CarBrandName" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="CarName" class="form-label">Name</label>
					<input asp-for="CarName" type="text" class="form-control" />
					<span asp-validation-for="CarName" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="CarKm" class="form-label">Km</label>
					<input asp-for="CarKm" type="text" class="form-control" />
					<span asp-validation-for="CarKm" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="CarFuel" class="form-label">Fuel</label>
					<input asp-for="CarFuel" type="text" class="form-control" />
					<span asp-validation-for="CarFuel" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="CarPrice" class="form-label">Price</label>
					<input asp-for="CarPrice" type="text" class="form-control" />
					<span asp-validation-for="CarPrice" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="ImgUrl" class="p-0">Img</label>
					<input type="file" name="file" class="form-control" />
				</div>

				@if (Model != null)
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Update</button>
				}
				else
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Add</button>
				}

				<a asp-controller="Cars" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
					Back
				</a>

			</div>

		</div>
		<div class="col-2">
			@if (Model != null)
			{
				<img src="@Model.ImgUrl" width="100%"
					 style="border-radius:7px; border:1px solid #bbb9b9" />
			}
		</div>
	</div>

</form>

