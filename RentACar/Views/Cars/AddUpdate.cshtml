@model Cars

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ImgUrl" hidden />
        <div class="row">
            <div class="col-10">
                <div class="border p-3 mt-5">
                    <div class="row pb-3">
                        <h2 class="text-primary">@(Model == null ? "Add " : "Update")</h2>
                        <hr />
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="CarBrandName" class="col-sm-2 col-form-label">Brand</label>
                        <div class="col-sm-10">
                            <input asp-for="CarBrandName" type="text" class="form-control" />
                            <span asp-validation-for="CarBrandName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="CarName" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input asp-for="CarName" type="text" class="form-control" />
                            <span asp-validation-for="CarName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="CarKm" class="col-sm-2 col-form-label">Km</label>
                        <div class="col-sm-10">
                            <input asp-for="CarKm" type="text" class="form-control" />
                            <span asp-validation-for="CarKm" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="CarFuel" class="col-sm-2 col-form-label">Fuel</label>
                        <div class="col-sm-10">
                            <input asp-for="CarFuel" type="text" class="form-control" />
                            <span asp-validation-for="CarFuel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="CarPrice" class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                            <input asp-for="CarPrice" type="text" class="form-control" />
                            <span asp-validation-for="CarPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ImgUrl" class="col-sm-2 col-form-label">Img</label>
                        <div class="col-sm-10">
                            <input type="file" name="file" class="form-control" />
                        </div>
                    </div>

                    @if (Model != null)
                    {
                        <button type="submit" class="btn btn-lg btn-primary">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-lg btn-primary">Add</button>
                    }

                    <a asp-controller="Cars" asp-action="Index" class="btn btn-lg btn-primary">
                        Back
                    </a>
                </div>
            </div>

            <div class="col-2 d-flex justify-content-center align-items-center">
                @* <br /> *@
                @if (Model != null)
                {
                    <img class="updatecar" src="@Model.ImgUrl" width="100%" style="border-radius:7px; border:1px solid #bbb9b9" />
                }
            </div>
        </div>
    </form>
</div>
