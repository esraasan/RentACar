@model RentACar.Models.Rental

@{
    ViewData["Title"] = "Update Rental";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Update Rental</h2>

    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" hidden />
                <input asp-for="CarId" hidden />
                <input asp-for="CarBrandName" hidden />
                <input asp-for="CarName" hidden />
                <input asp-for="Car" hidden />
                <input asp-for="UserId" hidden />
                <input asp-for="User" hidden />

                <div class="mb-3 row">
                    <label asp-for="CarBrandName" class="col-sm-5 col-form-label fw-bold ">Brand</label>
                    <div class="col-sm-10">
                        <input asp-for="CarBrandName" disabled class="form-control" />
                        <span asp-validation-for="CarBrandName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="CarName" class="col-sm-5 col-form-label fw-bold ">Car Name</label>
                    <div class="col-sm-10">
                        <input asp-for="CarName" disabled class="form-control" />
                        <span asp-validation-for="CarName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="StartDate" class="col-sm-5 col-form-label fw-bold">Start Date</label>
                    <div class="col-sm-10">
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="EndDate" class="col-sm-5 col-form-label fw-bold ">End Date</label>
                    <div class="col-sm-10">
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
