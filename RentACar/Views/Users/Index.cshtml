@model List<Users>
<div class="container">
    <div class="row pt-3 pb-4">
        <h1>Users</h1>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    User Surname
                </th>
                <th>
                    User Mail
                </th>
                <th>
                    User Number
                </th>
                <th>
                    User Type
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var users in Model)
            {
                <tr>
                    <td>
                        @users.Name
                    </td>
                    <td>
                        @users.Surname
                    </td>
                    <td>
                        @users.Email
                    </td>
                    <td>
                        @users.PhoneNumber
                    </td>
                    <td>
                        @users.UserType
                    </td>

                    <td><a asp-controller="Users" asp-route-id="@users.Id" asp-action="Delete" class="btn btn-danger">DELETE</a></td>
                    <td><a asp-controller="Users" asp-route-id="@users.Id" asp-action="AddUpdate" class="btn btn-success">UPDATE</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Users" asp-action="AddUpdate" class="btn btn-primary" type="button">
                Add New User
            </a>
        </div>
    </div>
</div>
