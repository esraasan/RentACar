@model Users
        <div class="login-dark">
            <form asp-action="Login" method="post" class="text-left">
                <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
   
                <div class="form-group">
                    <label for="userMail">E-mail</label>
                    <input id="userMail" asp-for="Email" name="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" asp-for="Password" name="Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
        <button type="submit" class="btn btn-primary btn-block mx-auto ">Login</button>

                <div>
                    <a asp-action="SignUp">Sign Up?</a>
                </div>
            </form>
            <br />

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
        </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

