@model Users
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h1 class="text-warning">Delete User</h1><hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name">User Name</label>
            <input asp-for="Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Surname">User Surname</label>
            <input asp-for="Surname" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email">User Mail</label>
            <input asp-for="Email" disabled type="text" class="form-control" />
        </div>

        <button type="submit" class="btn btn-outline-warning">Delete User</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-outline-warning">Back</a>
    </div>
</form>
